enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
  STUCK
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String
  priority    TaskPriority
  status      TaskStatus
  // increment index by 100 so that other tasks can be placed between two when reordered
  index       Int
  // for gantt charts
  dependsOn   Task[]       @relation("Dependent")
  dependedOn  Task[]       @relation("Dependent")
  assignedTo  User[]
  tags        String[]
  comments    Comment[]
  startedAt   DateTime     @default(now())
  duration    Int?
  dueDate     DateTime?
  completedAt DateTime?
}

model Comment {
  id        String   @id @default(uuid())
  author    User     @relation(fields: [userId], references: [id])
  task      Task     @relation(fields: [taskId], references: [id])
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  taskId    String
}

model Candy {
  id          String       @id @default(uuid())
  name        String
  price       Int
  description String
  image       String
  ingredients String
  directions  String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  CandyTrial  CandyTrial[]
}

model Item {
  id       String @id @default(uuid())
  name     String
  quantity String
  // candy    Candy?  @relation(fields: [candyId], references: [id])
  // candyId  String?
}

model Session {
  sid    String   @id
  sess   Json
  expire DateTime

  @@index([expire], name: "IDX_session_expire")
  @@map("session")
}
