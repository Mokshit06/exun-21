enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
  STUCK
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String
  priority    TaskPriority
  status      TaskStatus
  // for gantt charts
  dependsOn   Task[]       @relation("Dependent")
  dependedOn  Task[]       @relation("Dependent")
  assignedTo  User[]
  startedAt   DateTime     @default(now())
  dueDate     DateTime
  completedAt DateTime
}

model Candy {
  id          String   @id @default(uuid())
  name        String
  price       Int
  description String
  image       String
  ingredients Item[]
  directions  String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Item {
  id       String  @id @default(uuid())
  name     String
  quantity String
  candy    Candy?  @relation(fields: [candyId], references: [id])
  candyId  String?
}

model Session {
  sid    String   @id
  sess   Json
  expire DateTime

  @@index([expire], name: "IDX_session_expire")
  @@map("session")
}
